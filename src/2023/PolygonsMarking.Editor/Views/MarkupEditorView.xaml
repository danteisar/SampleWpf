<UserControl x:Class="PolygonsMarking.Editor.Views.MarkupEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PolygonsMarking.Editor.Views"
             xmlns:models="clr-namespace:PolygonsMarking.Editor.Models"
             xmlns:behaviors="clr-namespace:PolygonsMarking.Editor.Behaviors"
             xmlns:viewModels="clr-namespace:PolygonsMarking.Editor.ViewModels"
             xmlns:converters="clr-namespace:PolygonsMarking.Editor.Converters"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModels:MarkupEditorViewModel}">
    <d:UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
    </d:UserControl.Resources>
    <Grid>
        <ItemsControl ItemsSource="{Binding Path=Elements}">
            <ItemsControl.Resources>
                <Style TargetType="Ellipse" x:Key="EllipseStyle">
                    <Setter Property="Fill" Value="LightGreen"/>
                    <Setter Property="Width" Value="20"/>
                    <Setter Property="Height" Value="20"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Fill" Value="LightCoral" />
                            <Setter Property="Width" Value="30"/>
                            <Setter Property="Height" Value="30"/>
                            <Setter Property="Margin" Value="-5 -5 0 0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <DataTemplate DataType="{x:Type models:Vertex}">
                    <Ellipse 
                        Style="{StaticResource EllipseStyle}"
                        behaviors:DragBehavior.Drag="True"
                        Canvas.Top="{Binding Y, Mode=TwoWay}" 
                        Canvas.Left="{Binding X, Mode=TwoWay}"/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type models:VertexLine}">
                    <Line 
                        X1="{Binding Start.X, Converter={converters:VertexCenterConverter}}"
                        Y1="{Binding Start.Y, Converter={converters:VertexCenterConverter}}"
                        X2="{Binding End.X, Converter={converters:VertexCenterConverter}}"
                        Y2="{Binding End.Y, Converter={converters:VertexCenterConverter}}"
                        Stroke="LightBlue"
                        StrokeThickness="3"/>
                </DataTemplate>
            </ItemsControl.Resources>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas x:Name="Canvas" Background="{DynamicResource MaterialDesignPaper}" Margin="10">
                        <Canvas.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.Add, ElementName=Canvas}"/>
                            <MouseBinding Gesture="MiddleClick" Command="{Binding DataContext.End, ElementName=Canvas}"/>
                            <MouseBinding Gesture="RightDoubleClick" Command="{Binding DataContext.Clear, ElementName=Canvas}"/>
                        </Canvas.InputBindings>
                        <b:Interaction.Behaviors>
                            <behaviors:MouseBehaviour MouseX="{Binding StartVertex.X, Mode=TwoWay}"
                                                      MouseY="{Binding StartVertex.Y, Mode=TwoWay}"/>
                        </b:Interaction.Behaviors>
                    </Canvas>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Canvas.Left" Value="{Binding Path=X, Mode=TwoWay}" />
                    <Setter Property="Canvas.Top" Value="{Binding Path=Y, Mode=TwoWay}" />
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>
       <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
           <StackPanel.Resources>
                <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignTextBlock}">
                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                </Style>
            </StackPanel.Resources>
           <TextBlock Text="ЛКМ - ДОБАВИТЬ ВЕРШИНУ"/>
           <TextBlock Text="ПКМ - ДВИГАТЬ ВЕРШИНУ"/>
           <TextBlock Text="CКМ - ЗАМКНУТЬ"/>
           <UniformGrid Columns="2">
               <Button Content="{md:PackIcon ArrowLeft}" 
                       Style="{StaticResource MaterialDesignFlatSecondaryLightButton}"
                       Command="{Binding Cancel}"
                       ToolTip="ШАГ НАЗАД"/>
               <Button Content="{md:PackIcon Clear}" 
                       Style="{StaticResource MaterialDesignFlatSecondaryLightButton}"
                       Command="{Binding Clear}"
                       ToolTip="ОЧИСТИТЬ (ПКМ х2)"/>
            </UniformGrid>
       </StackPanel>
    </Grid>
</UserControl>
